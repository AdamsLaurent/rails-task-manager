<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<form class="me-2">
      <% checked = ""%>
      <% checked = "checked" if @task.completed == true%>
      <input type="checkbox" <%= checked %>>
    </form>

<%= link_to "Return to the list", tasks_path %>
<%= link_to "edit", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
